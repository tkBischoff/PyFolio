node {
    stage('SCM') {
        checkout scm
    }

    stage("verify tooling") {
        steps {
            sh 'echo "################# verify tooling ###########################"'
            sh '''
                docker version
                docker info
                docker-compose version
            '''
            withSonarQubeEnv(installationName: 'sq1') {
              sh "${scannerHome}/bin/sonar-scanner --version"
            }
        }
    }
}
